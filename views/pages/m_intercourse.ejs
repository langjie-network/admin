<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0">
	<title>客户关系管理</title>
	<%- include("../includes/styles.ejs") %>
	<link href="../styles/m_admin.css" rel="stylesheet" />
	<link href="../styles/index.css" rel="stylesheet" />
	<link href="../styles/responsive.css" rel="stylesheet" />
	<link href="../styles/n_index.css" rel="stylesheet" />
	<style>
		/*.search {
		    height: 8.25rem;
		}*/
		.select button {
			width: 140px;
		    height: 30px;
		    font-size: 14px;
		    border: 1px solid #999;
		    border-radius: 4px;
		    margin-top: 10px;
		    position: relative;
		    left: 10px;
		}
		.content li .weui-cell__hd img {
			margin-left: 1rem;
		}
		.content li p {
			padding: 2px;
   			padding-left: 18px;
		}
		.weui-cell {
			padding: 15px 15px;
		}
		.goods {
			margin-right: 20px;
		}	
		.weui-cell__bd {
			position: relative;
		}
		.icon-deliver {
		    font-size: 4rem;
			color: #EAB4B4;
			position: absolute;
			right: 11px;
			top: -19px;
			transform: rotate(58deg);
		}
		.content li .weui-cell__hd img {
    		width: 6.5rem;
    	}
	</style>
</head>
<body>
	<div id="wrap">
		<div class="search">
			<div class="form">
				<input type="text" placeholder="客户简称">
				<span class="iconfont icon-form-del" onclick="cl()" style="display: none;"></span>
				<div class="search2">
					<span style="left: 0.1875rem;" onclick="search()">搜索</span>
					<span class="iconfont icon-add" onclick="add()"></span>
				</div>
			</div>
			<!-- <div class="select">
				<button>标签</button>
			</div> -->
		</div>
		<div id="main">
			<div class="content">
				<ul>
					<% for(let i = 0; i < result.length; i++){ %>
					<li class="weui-cell weui-cell_access" style="padding-left:0px;" onclick="check(this)" data-id="<%= result[i].id %>">
						<div class="weui-cell__hd">
							<div class="default_member">
								<% if(album_arr[i]!=''){ %>
									<img class="assign_member" src="../img<%= album_arr[i] %>">
								<% }else{ %>
									<img class="assign_member" src="../img/controller_system.png">
								<% } %>
							</div>
						</div>
		                <div class="weui-cell__bd">
		                    <p class="content-cpy">客户名称：<%= result[i].cus_abb %></p>
							<p class="content-cpy">业务经理：<%= result[i].cus_manager %></p>
							<p class="content-cpy">开始时间：<%= result[i].start_time %></p>
		                </div>
		                <div class="weui-cell__ft"></div>
		            </li>
		            <% } %>
					<li class="weui-cell weui-cell_access li-mark"></li>
				</ul>
			</div>
		</div>
	</div>
</body>
<%- include("../includes/scripts.ejs") %>
<script src="../js/m_cus.js" type="text/javascript"></script>
<script>
	var _user_id = '<%= user_id %>';
	var input_width = $('.form input[type=text]').width()+5;
	$('.search-list').width(input_width);
</script>
</html>