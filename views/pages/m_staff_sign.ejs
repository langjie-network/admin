<style>
    html {
        height: 100%;
    }
    body {
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .sign-header {
        width: 100%;
        /* height: 60px; */
        /* display: flex; */
        background: #fff;
        padding-top: 10px;
    }
    .sign,.affair,.mail,.appSign {
        display: flex;
    }
    .sign>div,.affair>div,.mail>div,.appSign>div {
        flex: 1;
        text-align: center;
    }
    .sign-wrap {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    .sign-checkin {
        width: 76px;
        height: 38px;
        border-radius: 0.4rem;
        border: 1px solid #4CAF50;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background: #4CAF50;
        color: #fff;
        /* width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 1px solid #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background: #19ad19;
        color: #fff; */
    }
    .icon-dingwei {
        font-size: 1.5rem;
    }
    .wrap-duty {
        width: 100%;
        display: flex;
        justify-content: space-around;
        padding-top: 10px;
        /* width: 100%;
        height: 65px;
        display: flex;
        background: #fff;
        border-top: 1px solid #d1d1d1;
        padding-top: 10px; */
    }
    .wrap-duty>div {
        flex: 1;
        text-align: center;
    }
    .b-act {
        width: 100%;
    }
    .moreBar {
        border-top: 1px solid #eee;
        text-align: center;
        color: #999;
        padding: 0.375rem;
    }
    .more {
        display: none;
    }
</style>
<body>
    <div class="sign-header">
        <div class="sign">
            <div>
                <p>工时</p>
                <p class="workTime" style="color: #999"></p>
            </div>
            <div>
                <p>加班工时</p>
                <p class="overWorkTime" style="color: #999"></p>
            </div>
            <div>
                <p>值日</p>
                <p class="onDutyTime" style="color: #999"></p>
            </div>
            <div>
                <p>规定工时</p>
                <p class="total" style="color: #999"></p>
            </div>
        </div>
        <div class="more">
            <div class="mail" style="border-top: 1px solid #eee">
                <div>
                    <p>收到推送</p>
                    <p class="received"></p>
                </div>
                <div>
                    <p>未读</p>
                    <p class="notRead"></p>
                </div>
                <div>
                    <p>收到@</p>
                    <p class="atMe"></p>
                </div>
                <div>
                    <p>未答复</p>
                    <p class="notReply"></p>
                </div>
            </div>
            <div class="affair" style="border-top: 1px solid #eee">
                <div>
                    <p>参与事务</p>
                    <p class="joinAffair"></p>
                </div>
                <div>
                    <p>未更新</p>
                    <p class="notUpdate"></p>
                </div>
                <div>
                    <p>负责事务</p>
                    <p class="directotAffair"></p>
                </div>
                <div>
                    <p>逾期</p>
                    <p class="overTime"></p>
                </div>
            </div>
            <div class="appSign" style="border-top: 1px solid #eee">
                <div>
                    <p>进度警告</p>
                    <p class="warnProgress"></p>
                </div>
                <div class>
                    <p>服务工作日</p>
                    <p class="serverDuty"></p>
                </div>
                <div>
                    <p>APP未签到</p>
                    <p class="appNotSign"></p>
                </div>
                <div></div>
            </div>
        </div>
        <div class="moreBar" onclick="more();">更多</div>
    </div>
    <div class="sign-wrap">
        <!-- <div>
            <label>
                <span>安卫：</span>
                <span>章利钢</span>
            </label>
            <label>
                <span>客服：</span>
                <span>章利钢</span>
            </label>
        </div> -->
    </div>
</body>
